            <input type="date" name="DivorceDate" id="DivorceDate" class="form-control" value="@Model.DivorceDate" />
            @Html.ValidationMessageFor(model => model.DivorceDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HasDivorceReason, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="checkbox" checked="@Model.HasDivorceReason" name="HasDivorceReason id=" HasDivorceReason class="" />
            @Html.ValidationMessageFor(model => model.HasDivorceReason, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HasDivorceFamily, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="checkbox" checked="@Model.HasDivorceFamily" name="HasDivorceFamily" id="HasDivorceFamily" class="" />
            @Html.ValidationMessageFor(model => model.HasDivorceFamily, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.DivorceReason, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DivorceReason, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DivorceReason, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Html.Partial("_Script")

    <script>
    $(document).ready(function () {

    });
    </script>

}
